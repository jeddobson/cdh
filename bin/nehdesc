#!/usr/bin/env python

# import required tools
import nltk
import os, sys

package_root=str(os.path.dirname(sys.argv[0])) + "/../lib"
sys.path.append(package_root)

try:
	neh_id = sys.argv[1]
except IndexError:
	print("Error: need argument")
	exit()

if neh_id != None:
	# import textmine library
	import docsouth_utils

	try:
		neh_id = int(neh_id)
	except ValueError:
		print("Error: not a valid id!")
		exit()
	neh_slave_archive = docsouth_utils.load_narratives(options="notokenize")
	docsouth_utils.describe(neh_slave_archive[neh_id])
else:
	print("Error: need argument")
	exit()

